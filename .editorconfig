# EditorConfig aide les développeurs à définir et maintenir des styles
# de codage cohérents entre différents éditeurs et IDE
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_size = 4
max_line_length = 120

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml,json}]
indent_size = 2

[*.{js,ts,css,scss}]
indent_size = 2

[*.twig]
indent_size = 2

[composer.json]
indent_size = 4

[Makefile]
indent_style = tab
